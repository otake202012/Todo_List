<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/task_error_messages' %>
      <%= f.label :limit %>
      <%= f.date_field :limit, class: 'form-control' %><br>
      
      <%= f.label :task %>
      <%= f.text_field :task, class: 'form-control' %><br>
      
      <%= f.label :state %><br>
      <%= f.select :state, [["Todo", "Todo"], ["Doing", "Doing"],["Done", "Done"]], include_blank: "選択して下さい" , class: 'form-control' %><br>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>